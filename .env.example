# =============================================================================
# CONFIGURACIÓN DEL BOT
# =============================================================================

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key_here

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Option 1: Use Supabase (PostgreSQL) - Recommended for production
# Get your connection string from Supabase dashboard: Settings → Database
DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres

# Enable Supabase (set to true to use PostgreSQL, false for SQLite)
USE_SUPABASE=true

# Option 2: Use SQLite (local file) - Good for development
# SQLITE_DB_PATH=data/video_summary.db
# USE_SUPABASE=false

# Bot Configuration
BOT_NAME=YouTube-Financial-Bot
LOG_LEVEL=INFO
TIMEZONE=Europe/Madrid

# Schedule Configuration (24h format)
YOUTUBE_SCHEDULE_TIME=08:30
FINANCIAL_SCHEDULE_TIME=09:00

# Development settings
DEBUG_MODE=true
DRY_RUN=false

# Testing
TEST_MODE=false
TEST_CHAT_ID=your_test_chat_id_here